    {
        if ((t > maxDepth)) break;
    
        temp = Density(camPos + relVec * t);
        inc = 1.9 + temp*.05;	
        density += temp * inc;
 
        t += inc;
    }

	// --------------------------------------------------------------------------------
	// Now that we have done our ray marching, let's put some color on this.
	float3 finalColor = float3(0.6,0.09,0.01)* density * .075;
     
