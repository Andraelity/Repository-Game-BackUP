	float3 worldFacing=(camPos + camVec);//vcv
	float3 worldPix = worldFacing + uv.x * sideNorm * 1.0 + uv.y * upNorm;//scrCoord
	float3 relVec = normalize(worldPix - camPos);//scp

	// --------------------------------------------------------------------------------
	float t = -5.0;
	float inc;
	float maxDepth = 70.0;
 	float density = 0.;
    
