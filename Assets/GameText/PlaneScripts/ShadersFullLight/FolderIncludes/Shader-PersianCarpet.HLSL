static float2 fold = float2(0.5, -0.5);
static float2 translate = (1.5);
static float scale = 1.3;

float3 hsv(float h,float s,float v) {
	return lerp(float3(1.0, 1.0, 1.0),clamp((abs(frac(h+float3(3.,2.,1.)/3.)*6.-3.)-1.),0.,1.),s)*v;
}

float2 rotate(float2 p, float a){
	return float2(p.x*cos(a)-p.y*sin(a), p.x*sin(a)+p.y*cos(a));
}

float2x2 rotationMatrix(float a)
{
	float2x2 mat2 = {cos(a), -sin(a), sin(a), cos(a)};
	return mat2;
}


