	float2 p = coordinate * 2.0 ;
	p *= 0.003;

	float x = p.y;
	p = abs(fmod(p, 8.0) - 4.0);
	for(int i = 0; i < 36; i++)
	{
		p = abs(p - fold) + fold;
		p = p*scale - translate;
		p = rotate(p, 3.14159/(8.0+sin(-1 *TIME*0.005+ float(i) *0.1)*0.5+0.5));
	}
	float valueNumero = x*10.0 + atan2(p.y, p.x) +TIME * -0.5;
	float h = floor(valueNumero*6.0)/5.0 + 0.07;
	h += smoothstep(0.0, 0.4, fmod(valueNumero*6.0/5.0, 1.0/5.0)*5.0)/5.0 - 0.5;
	p = mul(rotationMatrix (TIME), p);
	float4 fragColor=float4(hsv(h, 1.0, smoothstep(-1.0, 3.0, length(p))), 1.0);




