// hashThisShader functions from https://www.shadertoy.com/view/4sjGD1
float hashThisShader(float x)
{
    return frac(sin(x) * 43758.5453) * 2.0 - 1.0;
}

float2 hashPosition(float x)
{
	return float2(
		floor(hashThisShader(x) * 3.0) * 32.0 + 16.0,
		floor(hashThisShader(x * 1.1) * 2.0) * 32.0 + 16.0
	);
}



