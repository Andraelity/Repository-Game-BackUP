fixed4 FRAGMENTSHADER (pixelPoints PIXELSPACE) : SV_Target
{
	float2 coordinate = PIXELSPACE.uv;
	float2 coordinateSprite = PIXELSPACE.uv2;
	
	float2 coordinateScale = (PIXELSPACE.uv * 2.0) - 1.0 ;
	
	float2 coordinateShade = coordinateScale/(float2(2.0, 2.0));
	
	float2 coordinateFull = ceil(coordinateShade);
	float3 colBase  = 0.0;  
	float3 colTexture = float3(coordinateScale.x + coordinateScale.y, coordinateScale.y - coordinateScale.x, pow(coordinate.x,2.0f));
//////////////////////////////////////////////////////////////////////////////////////////////
///	DEFAULT
//////////////////////////////////////////////////////////////////////////////////////////////
	colBase = 0.0;
//////////////////////////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////////////////////////////
	
	float time = TIME * speed;
	float falloff =  1.3;
	float3 metaBalls[Count];
	float d = 0.;
	float2 screen;
	float c = 0.;
	float2 res = 200.0;

	for(float i = .0; i < Count; i++){
		float2 pos = hashPosition(i) + float2(time * (1. + i), time * (1. + i));
		
		screen = floor(fmod(pos/res, 2.));
	
		// remap 0..1 to -1 to 1 to avoid branching in next line.
		float2 dir = screen * 2. - 1.;
		float2 finalPos = float2(res * (float2(1.0, 1.0) - screen) + dir * fmod(pos, res));
		
        int idx = int(i);
		metaBalls[idx] = float3(finalPos, abs(i));
		metaBalls[idx].z = res.y / 100. * i * .5;
		
		d = metaBalls[idx].z / distance(metaBalls[idx].xy , 200.0 * coordinate.xy );

		c += pow(d, falloff);
	}

	float3 varlast = float3(0.0, c, 0.15);
	
	float4 fragColor = float4(varlast, (varlast.x + varlast.y + varlast.z)/3.0);

	// fragColor = float4(uv, 0.0, 1.0);


